{
    "version": 2,
    "installCommand": "npm ci",
    "buildCommand": "npm run build:serverless",
    "outputDirectory": "src/client/dist",
    "devCommand": "npm run dev:frontend-only",
    "framework": "vite",
    "git": {
        "deploymentEnabled": {
            "main": true
        }
    },
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}