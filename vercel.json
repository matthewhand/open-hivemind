{
  "version": 2,
  "name": "open-hivemind",
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm ci",
  "framework": null,
  "regions": ["iad1"],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index"
    }
  ],
  "github": {
    "enabled": true,
    "autoAlias": false,
    "silent": true
  },
  "git": {
    "ignore": [
      {
        "type": "pull-request"
      }
    ],
    "deploymentHook": {
      "enabled": false
    }
  }
}