{
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "es5",
  "printWidth": 100,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "plugins": ["@ianvs/prettier-plugin-sort-imports"],
  "importOrder": [
    "^@(?!src|client|config|integrations|llm|message|server|types|common|auth|webhook|command)(.*)$",
    "^@src/(.*)$",
    "^@client/(.*)$",
    "^@config/(.*)$",
    "^@integrations/(.*)$",
    "^@llm/(.*)$",
    "^@message/(.*)$",
    "^@server/(.*)$",
    "^@types/(.*)$",
    "^@common/(.*)$",
    "^@auth/(.*)$",
    "^@webhook/(.*)$",
    "^@command/(.*)$",
    "^(\\./|\\.\\./)(.*)$"
  ],
  "importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"],
  "importOrderTypeScriptVersion": "5.9.2"
}
