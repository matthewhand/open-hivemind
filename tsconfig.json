{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "incremental": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "paths": {
      "@src/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "testUtils": ["./tests/testUtils"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests/**/*",
    "node_modules",
    "src/client/**/*"
  ],
  "files": [
    "src/types/express.d.ts",
    "src/global.d.ts"
  ]
}
