{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "incremental": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "jsx": "react",
    "paths": {
      "@command/*": ["src/command/*"],
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"],
      "@llm/*": ["src/llm/*"],
      "@message/*": ["src/message/*"],
      "@webhook/*": ["src/webhook/*"],
      "@integrations/*": ["src/integrations/*"],
      "@types/*": ["src/types/*"],
      "@src/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "testUtils": ["./tests/testUtils"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests/**/*",
    "node_modules",
    "webui/client/**/*"
  ],
  "files": [
    "src/types/express.d.ts",
    "src/global.d.ts"
  ]
}
