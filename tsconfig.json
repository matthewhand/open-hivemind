{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "incremental": true,
    "skipLibCheck": true,
    "downlevelIteration": true
  },
  "paths": {
    "@src/*": ["src/*"],
    "@tests/*": ["tests/*"],
    "testUtils": ["./tests/testUtils"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests/**/*",
    "node_modules"
  ],
  "files": [
    "src/types/express.d.ts",
    "src/global.d.ts"
  ]
}
