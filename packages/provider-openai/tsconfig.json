{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@hivemind/shared-types": ["../shared-types/src"],
      "@src/*": ["../../src/*"],
      "@config/*": ["../../src/config/*"],
      "@message/*": ["../../src/message/*"],
      "@types/*": ["../../src/types/*"],
      "@server/*": ["../../src/server/*"],
      "@services/*": ["../../src/services/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../shared-types" }
  ]
}
